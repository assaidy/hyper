// Benchmark 14: Empty Page
templ EmptyPageTempl() {
	<html>
		<body></body>
	</html>
}

// Benchmark 15: RawHTML
templ RawHTMLTempl(html string) {
	@templ.Raw(html)
}

// Benchmark 16: SVG
templ SVGTempl() {
	<svg width="100" height="100">
		<circle cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="red"/>
	</svg>
}
